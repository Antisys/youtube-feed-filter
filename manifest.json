{
  "manifest_version": 3,
  "name": "YouTube Feed Filter",
  "version": "1.2",
  "description": "Filter YouTube recommendations using local AI (Ollama) - remove clickbait, low-quality content, shorts, and customize topic blacklists",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["blacklist.json"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
